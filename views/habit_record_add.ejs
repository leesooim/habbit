<html>
  <head>
    <title>Habbit Recode Add</title>
    <link rel="stylesheet" href="https://cdn.simplecss.org/simple.min.css" />
    <style>
        .container {
        padding-top: 20%;
        padding-left: 10%;
        font-family: arial;
        font-size: 24px;
        margin: 25px;
        width: 400px;
        height: 200px;
        /* outline: dashed 1px black; */
      }

      input {
        width: 100%;
      }

      .btn {
        padding-left: 10%;
      }
      .button {
        width: 45%;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Habbit Record</h1>
      <form method="post" action="/add_habit_record" ">
        <div class="titleText">
          <h2><%= habit_name%></h2>
        </div>
        <div>
          <p>
            <label>memo</label>
            <input type="text" name="memo" />
          </p>
          <input type="hidden" name="habit_id" value="<%=habit_id%>">
          <input type="hidden" name="habit_name" value="<%=habit_name%>">
        </div class="btn">
        <a class="button" href="/habit_record_list/<%=habit_id%>?habit_name=<%=habit_name%>">list</a>
        <button class="button" type="submit">submit</button>
      </form>
    </div>
  </body>
</html>
